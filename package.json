{
  "name": "elsp",
  "version": "0.0.0",
  "description": "My Project",
  "esy": {
    "build": "dune build -p <PACKAGE_NAME>",
    "buildDev": "pesy",
    "release": {
      "releasedBinaries": [
        "ElspApp.exe"
      ]
    }
  },
  "buildDirs": {
    "test": {
      "require": ["elsp.lib"],
      "main": "TestElsp",
      "name": "TestElsp.exe"
    },
    "library": {
      "name": "elsp.lib",
      "namespace": "Elsp"
    },
    "executable": {
      "require": ["elsp.lib"],
      "main": "ElspApp",
      "name": "ElspApp.exe"
    }
  },
  "scripts": {
    "pesy": "bash -c 'env PESY_MODE=update pesy'",
    "test": "esy x TestElsp.exe"
  },
  "dependencies": {
    "@opam/dune": ">=1.6.0",
    "@esy-ocaml/reason": "*",
    "ocaml": "^4.4.0"
  },
  "devDependencies": {
    "ocaml": "4.7.1004",
    "refmterr": "*",
    "pesy": "*",
    "@opam/merlin": "*"
  }
}
